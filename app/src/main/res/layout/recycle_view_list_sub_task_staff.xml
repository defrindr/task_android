<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/offset10dp"
        android:paddingBottom="@dimen/offset10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sub_task.recycleview.description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/text_title"
            app:layout_constraintBottom_toTopOf="@+id/sub_task.recycleview.deadline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/sub_task.recycleview.deadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/small_text"
            app:layout_constraintBottom_toBottomOf="@+id/sub_task.recycleview.description"
            app:layout_constraintEnd_toEndOf="@+id/sub_task.recycleview.description"
            app:layout_constraintStart_toStartOf="@+id/sub_task.recycleview.description" />

        <TextView
            android:id="@+id/sub_task.recycleview.status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/small_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/sub_task.recycleview.deadline"
            app:layout_constraintStart_toStartOf="@+id/sub_task.recycleview.deadline"
            app:layout_constraintTop_toBottomOf="@+id/sub_task.recycleview.deadline" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/offset10dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

</LinearLayout>