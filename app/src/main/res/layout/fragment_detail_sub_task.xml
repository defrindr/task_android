<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    tools:context=".ui.DetailSubTask.DetailSubTaskFragment">
    <LinearLayout
        android:id="@+id/sub_task.detail.pblayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/white">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/progress_style"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/sub_task.detail.scrollview.container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:padding="@dimen/offset20dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/offset10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Nama Task" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" : " />
                    <TextView
                        android:id="@+id/sub_task.detail.task_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Task" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/offset10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Assign By" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" : " />
                    <TextView
                        android:id="@+id/sub_task.detail.assign_by.name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Task" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/offset10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="Description" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" : " />
                    <TextView
                        android:id="@+id/sub_task.detail.description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama TaskNama TaskNama TaskNama TaskNama TaskNama TaskNama TaskNama TaskNama Task" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/offset10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="Deadline" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" : " />
                    <TextView
                        android:id="@+id/sub_task.detail.deadline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="deadline" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/offset10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="Status" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" : " />
                    <TextView
                        android:id="@+id/sub_task.detail.status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="status" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/offset10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="Komentar" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" : " />
                    <TextView
                        android:id="@+id/sub_task.detail.komentar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/offset10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="120dp"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:text="File" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" : " />
                    <Button
                        android:id="@+id/sub_task.detail.file"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Download"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/form_upload_detail_sub_task"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/offset10dp"
                        android:gravity="center_vertical"
                        android:text="Keterangan / Deskripsi" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" : " />
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/sub_task.detail.form.description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="100dp"/>
                </LinearLayout>
                <Button
                    android:id="@+id/sub_task.detail.form.buttonUploadImage"
                    android:layout_marginTop="@dimen/offset20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Upload Dokumen" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>