<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/offset10dp"
    android:padding="@dimen/offset20dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/project.recycleview.description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/text_title"
            app:layout_constraintBottom_toTopOf="@+id/project.recycleview.deadline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/project.recycleview.deadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/small_text"
            app:layout_constraintBottom_toBottomOf="@+id/project.recycleview.description"
            app:layout_constraintEnd_toEndOf="@+id/project.recycleview.description"
            app:layout_constraintStart_toStartOf="@+id/project.recycleview.description" />

        <TextView
            android:id="@+id/project.recycleview.status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/small_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/project.recycleview.deadline"
            app:layout_constraintStart_toStartOf="@+id/project.recycleview.deadline"
            app:layout_constraintTop_toBottomOf="@+id/project.recycleview.deadline" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>